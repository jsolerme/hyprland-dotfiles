// -*- mode: jsonc -*-
// Wiki for more info: https://github.com/Alexays/Waybar/wiki

{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 30, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)

    // Choose the order of the modules
    "modules-left": [
        "idle_inhibitor",
        // "keyboard-state",
        "mpris",
        "hyprland/workspaces"
    ],
    "modules-center": [
        // "hyprland/windowcount",
        "hyprland/window"
    ],
    "modules-right": [
        "pulseaudio",
        "network",
        "power-profiles-daemon",
        "cpu",
        "memory",
        "temperature",
        // "backlight",
        // "hyprland/language",
        "battery",
        "clock",
        "tray",
        "custom/power"
    ],


    // Modules configuration
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "show-special": true,
        "warp-on-scroll": false,
        "format": "{name}",
    },
    "hyprland/windowcount": {
        "format": "[{}]",
        "format-empty": "[X]",
        "format-windowed": "[T]",
    // "format-fullscreen": "[{}]",
        "separate-outputs": true
    },
    "hyprland/window": {
        "max-length": 42,
        "format": " {class} | {title} "
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": false,
        "format": {
            "numlock": "N {icon}"
        },
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "mpris": {
        "interval": 1,
        "format-playing": "{status_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "status-icons": {
            "playing": "  ‚ñ∂",
            "paused": "  ‚è∏"
        },
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "  ÔÅÆ   ",
            "deactivated": "  ÔÅ∞   "
        }
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "{:%H:%M} ÔÄó ",
        "format-alt": "{:%A, %B %d, %Y (%R)} üóì",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-scroll-up": "tz_up",
                    "on-scroll-down": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "on-click": "kitty -e btop",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔÉâ",
        "tooltip-format": "{used:0.1f}G/{total:0.1f}G ÔÉâ"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C {icon}",
        "tooltip-format": "{temperatureK}¬∞K",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "interval": 15,
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{bandwidthUpBits}/{bandwidthDownBits} Ôûñ",
        // "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "on-click-right": "kitty -e nmtui",
        "tooltip-format": "{ifname}\nIP: {ipaddr}\nSignal: {signalStrength}%\nUp: {bandwidthUpBits}\nDown: {bandwidthDownBits}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
        },
        "on-click": "pavucontrol"
    },
    "custom/power": {
        "format" : "‚èª ",
	"tooltip" : false,
        "on-click" : "wlogout",
        "interval" : 0
    }
}
